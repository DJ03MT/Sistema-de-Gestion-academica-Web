<!DOCTYPE html>
<html lang="es">
<head>
    <title>Gestión de Cursos</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/menusecretaria.css">
    <style>
        /* Estilos para las alertas */
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            font-weight: 500;
            text-align: center;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>
<body style="background: var(--light);">
    <div class="form-page-container" style="max-width: 1200px;">
        <div class="form-header">
            <h1><i class="fas fa-chalkboard-teacher"></i> Gestión de Cursos</h1>
            <p>Asigne clases para el Año Lectivo: <strong><%= anioActivo.Anio %></strong></p>
        </div>
        
         <div class="form-content">
         
            <% if (successMessage) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= successMessage %>
                </div>
            <% } %>
            <% if (errorMessage) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> <%= errorMessage %>
                </div>
            <% } %>
            <div class="form-section">
                <h2 class="section-title">Asignar Nuevo Curso</h2>
                <form method="POST" action="/admin/cursos">
                    <input type="hidden" name="ID_Anio_Lectivo" value="<%= anioActivo.ID_Anio_Lectivo %>">
                    
                    <div class="form-grid" style="grid-template-columns: repeat(5, 1fr);">
                        <div class="form-group">
                            <label>1. Profesor</label>
                             <select name="ID_Profesor" required class="form-control">
                                <option value="">Seleccione Profesor</option>
                                <% profesores.forEach(p => { %>
                                     <option value="<%= p.ID_PROFESOR %>"><%= p.PRIMER_APELLIDO %>, <%= p.PRIMER_NOMBRE %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                             <label>2. Asignatura</label>
                            <select name="ID_Asignatura" required class="form-control">
                                <option value="">Seleccione Asignatura</option>
                                 <% asignaturas.forEach(a => { %>
                                    <option value="<%= a.ID_Asignatura %>"><%= a.NombreAsignatura %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                             <label>3. Grado</label>
                            <select name="ID_Grado" required class="form-control">
                                <option value="">Seleccione Grado</option>
                                 <% grados.forEach(g => { %>
                                    <option value="<%= g.ID_Grado %>"><%= g.NombreGrado %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                             <label>4. Sección</label>
                            <select name="ID_Seccion" required class="form-control">
                                <option value="">Seleccione Sección</option>
                                 <% secciones.forEach(s => { %>
                                    <option value="<%= s.ID_Seccion %>"><%= s.NombreSeccion %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                             <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary" style="width: 100%;">
                                <i class="fas fa-plus"></i> Asignar
                            </button>
                        </div>
                    </div>
                </form>
           </div>

            <div class="form-section">
                <h2 class="section-title">Cursos Asignados (<%= cursos.length %>)</h2>
                
                <div class="search-bar" style="margin-bottom: 20px;">
                    <input type="text" class="search-input" id="searchCursos" 
 placeholder="Filtrar por profesor o materia...">
                    <button class="search-btn"><i class="fas fa-search"></i></button>
                </div>

                <div class="table-container">
                    <table class="data-table">
                     <thead><tr><th>Profesor</th><th>Asignatura</th><th>Grado</th><th>Sección</th><th>Acción</th></tr></thead>
                        <tbody id="tbodyCursos">
                            <% cursos.forEach(c => { %>
                                <tr>
                                    <td><%= c.PRIMER_APELLIDO %>, <%= c.PRIMER_NOMBRE %></td>
                                    <td><%= c.NombreAsignatura %></td>
                                     <td><%= c.NombreGrado %></td>
                                    <td><%= c.NombreSeccion %></td>
                                    <td>
                                         <form method="POST" action="/admin/cursos/<%= c.ID_Curso %>/delete" 
                                               onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta asignación?');">
                                            <button type="submit" class="btn-action btn-delete">Eliminar</button>
                                         </form>
                                    </td>
                                </tr>
                             <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

             <div class="btn-group">
                 <a href="/admin" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver al Admin</a>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchCursos');
            const tableBody = document.getElementById('tbodyCursos');
            const rows = tableBody.querySelectorAll('tr');

             searchInput.addEventListener('keyup', function() {
                const query = searchInput.value.toLowerCase();

                rows.forEach(row => {
                    const profe = row.querySelectorAll('td')[0]?.textContent.toLowerCase() || '';
                    const asignatura = row.querySelectorAll('td')[1]?.textContent.toLowerCase() || '';
                    
                    if (profe.includes(query) || asignatura.includes(query)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>